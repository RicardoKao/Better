<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:et_labelEnable="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/betteraddplanactionbar"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Better">
        </TextView>
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/add_plan_return_image_button"
            android:background="#00000000"
            android:layout_gravity="right">
        </ImageButton>
    </android.support.v7.widget.Toolbar>


    <!--app:tabMode="scrollable"  这个属性我在代码中设置了-->
    <!-- tabLayout.setTabMode(TabLayout.MODE_SCROLLABLE);-->


    <com.rey.material.widget.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textfield_title"
        android:inputType="text"
        app:et_inputId="@+id/textfield_declare_input"
        app:et_supportMode="helper"
        app:et_helper="请输入计划标题"
        app:v_styleId="@array/edittext"
        >
    </com.rey.material.widget.EditText>

    <com.rey.material.widget.EditText
        android:id="@+id/textfield_declare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="text"
        app:et_inputId="@+id/textfield_declare_input"
        app:et_supportMode="helper"
        app:et_helper="请输入你的宣言"
        app:v_styleId="@array/edittext"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/stime"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/stime_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/stime"
            android:layout_toRightOf="@+id/stime"
            android:drawableEnd="@mipmap/more"
            android:drawableRight="@mipmap/more"
            android:hint="timehint"
            android:padding="12dp"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/etime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/etime"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/etime_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/etime"
            android:layout_toRightOf="@+id/etime"
            android:drawableEnd="@mipmap/more"
            android:drawableRight="@mipmap/more"
            android:hint="timehint"
            android:padding="12dp"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule_add"
        android:textColor="#14e4ff" />
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>

